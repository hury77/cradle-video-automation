# New Video Compare - Environment Configuration Template
# Copy to .env and fill in your values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME="New Video Compare"
APP_VERSION="0.1.0"
DEBUG=true
ENVIRONMENT=development

# =============================================================================
# SERVER SETTINGS
# =============================================================================
HOST=0.0.0.0
PORT=8001
RELOAD=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database
DATABASE_URL=postgresql://username:password@localhost:5432/new_video_compare
DB_HOST=localhost
DB_PORT=5432
DB_NAME=new_video_compare
DB_USER=username
DB_PASSWORD=password

# =============================================================================
# REDIS CONFIGURATION (Task Queue & Cache)
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# FILE STORAGE SETTINGS
# =============================================================================
# Upload directory for video files
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=2147483648  # 2GB in bytes
ALLOWED_VIDEO_EXTENSIONS=.mp4,.mov,.avi,.mkv,.mxf,.prores
ALLOWED_AUDIO_EXTENSIONS=.wav,.mp3,.aac,.flac

# =============================================================================
# PROCESSING SETTINGS
# =============================================================================
# FFmpeg path (auto-detected if not specified)
FFMPEG_PATH=ffmpeg
FFPROBE_PATH=ffprobe

# Processing limits
MAX_CONCURRENT_JOBS=3
PROCESSING_TIMEOUT=1800  # 30 minutes

# =============================================================================
# INTEGRATION SETTINGS
# =============================================================================
# Desktop App WebSocket
DESKTOP_APP_WS_URL=ws://localhost:8765

# AI Agent API (future integration)
AI_AGENT_URL=http://localhost:8002
AI_AGENT_API_KEY=your_ai_agent_key_here

# External webhook for notifications
WEBHOOK_URL=
WEBHOOK_SECRET=

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SECRET_KEY=your-super-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# =============================================================================
# LOGGING SETTINGS
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# FRONTEND SETTINGS
# =============================================================================
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# =============================================================================
# CELERY SETTINGS (Task Queue)
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_ROUTES={}
