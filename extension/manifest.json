{
  "manifest_version": 3,
  "name": "Cradle Video Automation",
  "version": "2.0.1",
  "description": "Automates video QA workflow in Cradle system",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  
  "host_permissions": [
    "*://cradle.egplusww.pl/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["*://cradle.egplusww.pl/*"],
      "js": ["content/cradle-scanner.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Cradle Video Automation"
  },
  
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  }
}