{
  "manifest_version": 3,
  "name": "Cradle Video Automation",
  "version": "1.0.0",
  "description": "Automates video file comparison workflow in Cradle system",
  
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "notifications",
    "scripting"
  ],
  
  "host_permissions": [
    "https://*.cradle.com/*",
    "https://*.omnipro.global/*",
    "file://*/*"
  ],
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://*.cradle.com/*", "https://*.omnipro.global/*"],
      "js": [
        "content/cradle-scanner.js",
        "content/file-downloader.js", 
        "content/video-compare.js",
        "content/notification.js"
      ],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Cradle Video Automation",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png", 
      "128": "assets/icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  }
}